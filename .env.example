# ============================================
# WhaTicket SaaS - Environment Variables
# ============================================
# Copy this file to .env and configure with your actual values

# ============================================
# Application URLs
# ============================================
# IMPORTANT: Change these to your actual domain URLs
BACKEND_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_USER=whaticket
DB_PASS=CHANGE_ME_TO_SECURE_PASSWORD
DB_NAME=whaticket

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
REDIS_OPT_LIMITER_MAX=1
REDIS_OPT_LIMITER_DURATION=3000

# ============================================
# JWT Authentication Secrets
# ============================================
# CRITICAL: Generate secure random strings for production
# You can generate them with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=CHANGE_ME_TO_RANDOM_SECRET_32_CHARS_MIN
JWT_REFRESH_SECRET=CHANGE_ME_TO_ANOTHER_RANDOM_SECRET_32_CHARS_MIN

# ============================================
# Application Settings
# ============================================
NODE_ENV=production
USER_LIMIT=10000
CONNECTIONS_LIMIT=100000
CLOSED_SEND_BY_ME=true
HOURS_CLOSE_TICKETS_AUTO=24

# ============================================
# Optional: Ports (usually handled by EasyPanel)
# ============================================
BACKEND_PORT=8080
FRONTEND_PORT=3000

# ============================================
# Optional: Payment Integration (Gerencianet/Efi Pay)
# ============================================
GERENCIANET_SANDBOX=false
GERENCIANET_CLIENT_ID=
GERENCIANET_CLIENT_SECRET=
GERENCIANET_PIX_CERT=
GERENCIANET_PIX_KEY=

# ============================================
# Optional: Facebook Integration
# ============================================
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# ============================================
# Webhook Configuration
# ============================================
VERIFY_TOKEN=whaticket_webhook_secure_token
