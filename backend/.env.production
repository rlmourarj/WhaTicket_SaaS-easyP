# WhaTicket Backend - Production Environment Variables
# Copy this file and configure with your actual values

# Node Environment
NODE_ENV=production

# Application URLs
BACKEND_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com
PROXY_PORT=8080
PORT=8080

# Database Configuration (PostgreSQL)
DB_DIALECT=postgres
DB_HOST=postgres
DB_PORT=5432
DB_USER=whaticket
DB_PASS=your_secure_database_password_here
DB_NAME=whaticket

# JWT Secrets (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))")
JWT_SECRET=CHANGE_ME_TO_RANDOM_SECRET
JWT_REFRESH_SECRET=CHANGE_ME_TO_ANOTHER_RANDOM_SECRET

# Redis Configuration
REDIS_URI=redis://:your_redis_password@redis:6379
REDIS_OPT_LIMITER_MAX=1
REDIS_OPT_LIMITER_DURATION=3000

# Application Limits
USER_LIMIT=10000
CONNECTIONS_LIMIT=100000
CLOSED_SEND_BY_ME=true

# Gerencianet/Efi Pay Configuration (Optional - for payment integration)
GERENCIANET_SANDBOX=false
GERENCIANET_CLIENT_ID=
GERENCIANET_CLIENT_SECRET=
GERENCIANET_PIX_CERT=
GERENCIANET_PIX_KEY=

# Facebook Integration (Optional)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Webhook Verification Token
VERIFY_TOKEN=whaticket_webhook_token

# Chrome/Puppeteer Configuration
CHROME_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-accelerated-2d-canvas,--no-first-run,--no-zygote,--disable-gpu
